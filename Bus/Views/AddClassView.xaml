<UserControl x:Class="Bus.Views.AddClassView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bus.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <TextBox Name="ClassName" HorizontalAlignment="Left" Margin="16,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" Height="38" FontSize="16" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
        <Label Content="Class Name" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top" Height="44" Width="89" FontSize="14"/>
        <Button Content="Add Class" BorderThickness="15" HorizontalAlignment="Left" Margin="138,220,0,0" VerticalAlignment="Top" Command="{Binding AddClassCommand}"/>
        <Button Content="Back" BorderThickness="15" HorizontalAlignment="Left" Margin="728,10,0,0" VerticalAlignment="Top" Command="{Binding BackCommand}"/>

    </Grid>

</UserControl>
